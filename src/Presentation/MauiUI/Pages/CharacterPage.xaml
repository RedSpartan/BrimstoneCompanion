<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RedSpartan.BrimstoneCompanion.MauiUI.Controls"
             x:Class="RedSpartan.BrimstoneCompanion.Presentation.MauiUI.Pages.CharacterPage"
             Title="{Binding Title}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <controls:MainLineStatsController
                Grid.Column="0"
                Grid.Row="0" />

            <controls:StatsView
                Grid.Column="0"
                Grid.Row="1" />

            <controls:HealthSanityController
                Grid.Column="0"
                Grid.Row="2" />

            <controls:EquipmentControl
                Grid.Column="0"
                Grid.Row="3" />
        </Grid>
</ContentPage>